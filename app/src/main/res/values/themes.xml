<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Onggiyonggi" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MyFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearance">@style/ShapeAppearance.FAB.Round</item>
    </style>

    <style name="ShapeAppearance.FAB.Round" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyCircularProgressStyle" parent="Widget.Material3.CircularProgressIndicator">
        <item name="trackThickness">6dp</item>
        <item name="trackColor">#E0E0E0</item>
        <item name="indicatorColor">@color/home_fab_green</item>
        <item name="indicatorInset">6dp</item>
    </style>
</resources>